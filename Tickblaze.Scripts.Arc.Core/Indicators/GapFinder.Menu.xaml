<Menu
	mc:Ignorable="d"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:common="clr-namespace:Tickblaze.Scripts.Arc.Common;assembly=Tickblaze.Scripts.Arc.Common">
	<Menu.Resources>
		<x:Static Member="common:ResourceDictionaries.DefaultResources" />
	</Menu.Resources>
	
	<MenuItem
		BorderThickness="2"
		Background="White"
		BorderBrush="Maroon"
		Grid.IsSharedSizeScope="True">
		<MenuItem.Header>
			<TextBlock
				FontSize="13"
				FontWeight="Bold"
				Foreground="Maroon"
				Text="{Binding MenuHeader}" />
		</MenuItem.Header>
		<common:OnOffMenuItem
			Header="Show Fresh Gaps"
			IsOn="{Binding ShowFreshGaps, Mode=TwoWay}" />
		<common:OnOffMenuItem
			Header="Show Tested Gaps"
			IsOn="{Binding ShowTestedGaps, Mode=TwoWay}" />
		<common:OnOffMenuItem
			Header="Show Broken Gaps"
			IsOn="{Binding ShowBrokenGaps, Mode=TwoWay}" />
	</MenuItem>
</Menu>