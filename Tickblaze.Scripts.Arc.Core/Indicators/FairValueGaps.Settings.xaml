<Menu
    Background="Black"
    VerticalAlignment="Center"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800"
	xmlns:local="clr-namespace:Tickblaze.Scripts.Arc.Core"
    x:Class="Tickblaze.Scripts.Arc.Core.FairValueGapsSettings"
	xmlns:arc="clr-namespace:Tickblaze.Scripts.Arc.Core"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <MenuItem
        FontSize="13"
        FontWeight="Bold"
        BorderThickness="2"
        Background="White"
        BorderBrush="Maroon"
        VerticalAlignment="Stretch"
        Header="{Binding SettingsHeader}">
        <MenuItem
            Header="{Binding ShowFreshFvgs}"
            Foreground="Black"
            StaysOpenOnClick="True"
            FontWeight="Normal" />
    </MenuItem>
</Menu>
